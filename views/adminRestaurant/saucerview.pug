extends layout

block content
  h4 Platillos de Comida
    if alert.success
      .card-panel.green-text.text-accent-4#alert
        h5 #{alert.success}
          i.close.right.material-icons close
    if alert.error
      .card-panel.red-text.text-accent-4#alert
        h5 #{alert.error}
          i.close.material-icons close
  .row
    each item in dataP
      .col.s12.m6.l4
        .card.small 
          .card-image
            img.materialboxed(src='../images/platillos/'+item.imagen,alt='Platillo')
          .card-content
            span.card-title.activator.grey-text.text-darken-4= item.nombre
              i.material-icons.right more_vert
            p= item.nombre
            p.truncate= item.descripcion
          .card-reveal
            span.card-title.grey-text.text-darken-4 Descripci√≥n
              i.material-icons.right close
            p= item.descripcion