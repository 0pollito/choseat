extends layout

block content
  h4 Platillos de Comida
    .row
      .col.s12.m6.right
        if alert.success
          h5.chip.white.green-text.text-accent-4.righ#alert #{alert.success}
            i.close.right.material-icons close
        if alert.error
          h5.chip.white.red-text.text-accent-4.right#alert #{alert.error}
            i.close.material-icons.right close
  .row
    each item in dataP
      .col.s12.m6.l4
        .card.small 
          .card-image
            img.materialboxed(src='../images/platillos/'+item.imagen,alt='Platillo')
          .card-content
            span.card-title.activator.grey-text.text-darken-4= item.nombre
              i.material-icons.right more_vert
            p $ #{item.precio}
          .card-reveal
            span.card-title.grey-text.text-darken-4 Descripci√≥n
              i.material-icons.right close
            p= item.descripcion
            p $#{item.precio}