doctype html
htmls
  head
    title
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    link(href='/stylesheets/icons.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/materialize.min.css', rel='stylesheet', type='text/css')
    link(href='/stylesheets/style.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='/javascripts/jquery.min.js')
    script(type='text/javascript', src='/javascripts/materialize.min.js')
    script(type='text/javascript', src='/javascripts/init.js')

  body(style="background: url(images/body.png); background-repeat: no-repeat;")
    header
      .navbar-fixed
        nav
          .nav-wrapper.red
            .container
              a.brand-logo(href='/'): img.responsive-img.circle(src='images/logo.jpeg', alt='Choseat',width='64')
              a.button-collapse(href='#', data-activates='mobile-demo') 
                i.material-icons menu
              ul#mobile-demo.side-nav
                li: a.active(href='/') Inicio
                li: a.dropdown-button(href='/restaurants', data-activates='dropdown1')   Restaurantes
                li: a(href='/contact') Contacto
                if session.userType == 'Cliente'
                  li: a(href='/client/account') #{session.email}
                  li: a(href='/logout') Salir
                else
                  li: a(href='/register') Crear una cuenta
                  li: a(href='/login') Iniciar Sesión
              ul.right.hide-on-med-and-down
                li: a.active(href='/') Inicio
                li: a.dropdown-button(href='/restaurants', data-activates='dropdown1')   Restaurantes
                li: a(href='/contact') Contacto
                if session.userType == 'Cliente'
                  li: a(href='/client/account') #{session.email}
                  li: a(href='/logout') Salir
                else
                  li: a(href='/register') Crear una cuenta
                  li: a(href='/login') Iniciar Sesión

              ul#dropdown1.dropdown-content
                li: a(href='/comida_tradicional') Comida Tradicional
                li: a(href='/comida_rapida') Comida Rápida
                li: a(href='/marisqueria') Marisqueria
                li: a(href='/comida_extranjera') Comida Extranjera

    main
      block content

    footer.page-footer.red
      .container.center
        a.btn-floating.circle.white(href='https://www.facebook.com/choseat/')
          img.responsive-img(src='https://cdn.icon-icons.com/icons2/836/PNG/512/Facebook_icon-icons.com_66805.png')
        a.btn-floating.circle.white(href='https://twitter.com/ChoseatWeb')
          img.responsive-img(src='https://cdn.icon-icons.com/icons2/555/PNG/512/twitter_icon-icons.com_53611.png')
        a.btn-floating.circle.white(href='https://www.instagram.com/choseat.web')
          img.responsive-img(src='https://cdn.icon-icons.com/icons2/1211/PNG/512/1491580658-yumminkysocialmedia06_83104.png')
      .footer-copyright.red
        .container
