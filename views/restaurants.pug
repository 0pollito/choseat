extends layout

block content
  .container
    .row
      h4 #{titulo}
      .divider
    .row
      each item in dataR
        .col.s12.m6.l4
          .card.small 
            .card-image
              img.materialboxed(src='images/users/'+item.imagenPortada,alt='Restaurante')
              span.card-title #{item.nombre}
            .card-content
              span.card-title.activator Descripción
                i.material-icons.right more_vert
            .card-reveal
              span.card-title.grey-text.text-darken-4 Descripción
                i.material-icons.right close
              p= item.descripcion
            .card-action
              form(method='get',action='/restaurantProfile')
                input.hide(type='text',name='rest',value=item.idRestaurante)
                button.btn(type='submit') Ver perfil




