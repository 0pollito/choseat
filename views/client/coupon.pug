extends layout

block content
  .container.white
    .card-panel
      h3 Cupones obtenidos
      h6 Obten cupones realizando reservaciones en tu restaurante favorito, entre mas reservas mas cupones obtienes.
        .row
          .col.s12.m6.right
            if alert.success
              h5.chip.white.green-text.text-accent-4.righ#alert #{alert.success}
                i.close.right.material-icons close
            if alert.error
              h5.chip.white.red-text.text-accent-4.right#alert #{alert.error}
                i.close.material-icons.right close
      .row
        each item in dataCou
          .col.s12.m6.l4
            .card.small 
              .card-image
                img.materialboxed(src='../images/platillos/'+item.imagen,alt='Platillo')
              .card-content
                span.card-title.activator.grey-text.text-darken-4= item.idCupon
                  i.material-icons.right more_vert
              .card-reveal
                span.card-title.grey-text.text-darken-4 Descripci√≥n
                  i.material-icons.right close
                p= item.descripcion
                p vence #{item.fecha_vencimiento}