extends layout

block content
  .container.white
    .card-panel
      h3 Cupones obtenidos
      h6 Obten cupones realizando reservaciones en tu restaurante favorito, entre mas reservas mas cupones obtienes.
        .row
          .col.s12.m6.right
            if alert.success
              h5.chip.white.green-text.text-accent-4.righ#alert #{alert.success}
                i.close.right.material-icons close
            if alert.error
              h5.chip.white.red-text.text-accent-4.right#alert #{alert.error}
                i.close.material-icons.right close
      .row
        each item in dataCou
          .col.s12.m6.l4
            .card.medium 
              .card-image
                img.materialboxed(src='../../images/cupones/'+item.imagen,alt='Cupon')
              .card-content
                span.card-title.grey-text.text-darken-4  Descubre el contenido
                p Generado el #{item.emision}
                p Vigente hasta #{item.vencimiento}
                p Cupon otorgado por Restaurante #{item.nombre}