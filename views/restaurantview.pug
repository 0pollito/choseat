block content
  .container
    .parallax-container
      .parallax
        img(src='images/users/'+dataR.imagenPortada)
      .col.s12.m4
        .row
          .col.s12.m4
            .container
              img.circle.responsive-img(src='images/users/'+dataR.imagenPerfil)
              h5.center #{dataR.clasificacion}
